@model One_Help_ASP.Models.Association

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>Association</h4>
<hr />

<form method="post" asp-action="Create">
    <div class="border p-3">
        <div class="form-group row">
            <h2 class="text-black-50 pl-3">AddBenevole</h2>
        </div>
        <div class="row">
            <div class="col-12">
                <div class="form-group row">
                    <div class="col-3">
                        <label asp-for="NomAsso"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="NomRepLegal"></label>
                    </div>
                     <div class="col-3">
                        <label asp-for="Adresse"></label>
                    </div>
                    <div class="col-3">
                        <label asp-for="CodePostal"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-3">
                        <input  asp-for="NomAsso" class="form-control"  />
                        <span asp-validation-for=" NomAsso" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="NomRepLegal" class="form-control" />
                        <span asp-validation-for="NomRepLegal" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="Adresse" class="form-control" />
                        <span asp-validation-for=" Adresse" class="text-danger"></span>
                    </div>
                    <div class="col-3">
                        <input asp-for="CodePostal" class="form-control" />
                        <span asp-validation-for=" CodePostal" class="text-danger"></span>
                    </div>
                </div>

            </div>
        </div>
       
           
                <div class="form-group row">
                    <div class="col-4">
                        <label asp-for="NumeroTel"></label>
                       
                    </div>
                    <div class="col-4">
                        <label asp-for="Email"></label>
                    </div>
                    <div class="col-4">
                        <label asp-for="Mdp"></label>
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-4">
                        <input asp-for="NumeroTel" class="form-control" />
                        <span asp-validation-for="NumeroTel" class="text-danger"></span>
                    </div>
                    <div class="col-4">
                        <input asp-for="Email" class="form-control" />
                    </div>
                    <div class="col-4">
                        <input asp-for="Mdp" class="form-control" />
                    </div>
                </div>
                <div class="form-group row">
                    <div class="col-8 offset-2 row ">
                        <div class="col">
                            <input type="submit" class="btn btn-info w-75" value="Créer" />
                        </div>
                        <div class="col">
                            <a asp-controller="Association" asp-action="Index" class="btn btn-danger w-75">Retour</a>  
                        </div>
                    </div>
                   
                    
                </div>
        
    </div>
</form>

@section Scripts{
    @{<partial name= "_ValidationScriptsPartial" />}
 }

